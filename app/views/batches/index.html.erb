<div class="container">
	<%= form_with model: Batch.new do |form| %>
		<%= form.hidden_field(
			:purpose,
			value: 'general_ledger'
		) %>
		<%= form.submit %> 
	<% end %>
	<% @batches.each do |batch| %>
		<div class="row">
      <div class="col-2">
        <%= link_to('Edit', edit_batch_path(batch)) %>
      </div>
      <div class="col-4">
			  <%= batch.name %>
		  </div>
      <div class="col-4">
        <%= batch.comment %>
      </div>
      <div class="col-2">
        <%= form_with model: batch do |form| %>
          <%= form.hidden_field(
            :posted_at,
            value: DateTime.now
          ) %>
          <%= form.submit "Post" %>
        <% end %>
      </div>
    </div> 
	<% end %>
</div>